$.fn.extend {
  integrateSelect2: (selector)->
    selector = selector || '.select2'
    $(@).find(selector).select2({theme: "bootstrap",width: '100%'})
                
  integrateDatepicker: (selector)->
    selector = selector || '.datepicker'
    $(@).find(selector).datepicker({
      startView: 1,
      language: "es",
      orientation: "bottom auto",
      autoclose: true,
      todayHighlight: true
    })
}


$(document).ready ->
  $('.datatable').dataTable()

  

$(document).on 'turbolinks:load', ->
  datatable = $('.datatable')
  datatable.DataTable
    'language': 'url': '//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json'
    'bPaginate': true
    'info': false
    'responsive': true
    'deferRender': true

    form = $('form')
    form.integrateSelect2()
    form.integrateDatepicker()


$(document).on 'turbolinks:before-cache', ->
    dataTable =  $($.fn.dataTable.tables(true)).DataTable()
    if (dataTable != null)
     dataTable.destroy();


