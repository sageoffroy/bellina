<h1>Sale Details</h1>

<table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Footwear</th>
      <th>Count</th>
      <th>Real price</th>
      <th>Real price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_details.each do |sale_detail| %>
      <tr>
        <td><%= sale_detail.sale %></td>
        <td><%= sale_detail.footwear %></td>
        <td><%= sale_detail.count %></td>
        <td><%= sale_detail.real_price %></td>
        <td><%= sale_detail.real_price %></td>
        <td><%= link_to 'Show', sale_detail %></td>
        <td><%= link_to 'Edit', edit_sale_detail_path(sale_detail) %></td>
        <td><%= link_to 'Destroy', sale_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

